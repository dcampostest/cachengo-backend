{{define "create_product"}}
{{template "header"}}

<div class="card">
    <div class="card-header">
        Create Product
    </div>
    <div class="card-body">
        <form method="post" action="/categories">
            <div class="form-group">
                <label for="">Name</label>
                <input type="text" class="form-control" id="categorieName" placeholder="cocktails">
            </div>
            <div class="form-group">
                <label for="">Description</label>
                <input type="text" class="form-control" id="categorieDescription" placeholder="description in categorie">
            </div>
            <div class="form-group">
                <label for="">Category</label>
                <select class="form-control">
                    <option>Mocktails</option>
                    <option>Gaseosas</option>
                    <option>Cocaktails</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">New Categorie</button>
            <a href="/listproducts" class="btn btn-info" role="button">Cancel</a>
        </form>
    </div>
{{template "footer"}}
{{end}}