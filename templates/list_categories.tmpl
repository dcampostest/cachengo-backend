{{ define "list_categories"}}
{{template "header"}}


<a name="" id="" class="btn btn-dark" href="/createcategory" role="button">New Category</a>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

  {{range .}}
    
    <tr>
      <th scope="row">{{.ID}}</th>
      <td>{{.Name}}</td>
      <td>{{.Description}}</td>
      <td>
        <a name="" id="" class="btn btn-warning" href="/updatecategory?id={{.ID}}" role="button">Update</a>
        <a name="" id="" class="btn btn-danger" href="/deletecategory?id={{.ID}}" role="button">Borrar</a>
      </td>
    </tr>

  {{end}}
  </tbody>
</table>
{{template "footer"}}
{{end}}