{{ define "list_products"}}
{{template "header"}}


<a name="" id="" class="btn btn-dark" href="/createproduct" role="button">New Category</a>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Category</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>

  {{range .}}
    
    <tr>
      <th scope="row">{{.ID}}</th>
      <td>{{.Name}}</td>
      <td>{{.Description}}</td>
      <td>{{.Price}}</td>
      <td>{{.Category.Name}}</td>
      <td>
        <a name="" id="" class="btn btn-warning" href="/updateproduct?id={{.ID}}" role="button">Update</a>
        <a name="" id="" class="btn btn-danger" href="/deleteproduct?id={{.ID}}" role="button">Borrar</a>
      </td>
    </tr>

  {{end}}
  </tbody>
</table>
{{template "footer"}}
{{end}}